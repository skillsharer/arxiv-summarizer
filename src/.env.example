# OpenAI Configuration
OPENAI_BEARER_TOKEN=your_openai_api_key_here

# Twitter API Configuration (Tweepy method - traditional API)
CONSUMER_KEY=your_twitter_consumer_key
CONSUMER_SECRET=your_twitter_consumer_secret
ACCESS_TOKEN=your_twitter_access_token
ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
BEARER_TOKEN=your_twitter_bearer_token

# Twitter Authentication Method Selection
# Options: "tweepy" (traditional API) or "twikit" (scraping method with better rate limits)
TWITTER_AUTH_METHOD=tweepy

# Twitter Credentials for Twikit Method (better rate limits)
# Only required if TWITTER_AUTH_METHOD=twikit
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email_optional
